<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mainInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainFirstBtn">

        <EditText
            android:id="@+id/mainEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/main_fragment_hint" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/mainFirstBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="80dp"
        android:text="@string/main_first_button_text"
        android:background="@drawable/button_rounded"
        app:layout_constraintEnd_toEndOf="@+id/mainSecondBtn"
        app:layout_constraintTop_toBottomOf="@+id/mainInputLayout">
    </Button>

    <Button
        android:id="@+id/mainSecondBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/button_rounded"
        app:layout_constraintTop_toBottomOf="@+id/mainFirstBtn"
        app:layout_constraintEnd_toEndOf="@+id/mainThirdBtn"
        android:text="@string/second_screen_button_text">
    </Button>


    <Button
        android:id="@+id/mainThirdBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/button_rounded"
        app:layout_constraintTop_toBottomOf="@+id/mainSecondBtn"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/bottom_sheet_text">
    </Button>


















</androidx.constraintlayout.widget.ConstraintLayout>