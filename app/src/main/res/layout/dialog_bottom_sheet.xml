<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/bottomIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bottomSheetBtn">

        <EditText
            android:id="@+id/bottomEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/main_fragment_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bottomSheetBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/button_rounded"
        app:layout_constraintTop_toTopOf="@id/bottomIL"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/BotoomSheetBtnText" />






</androidx.constraintlayout.widget.ConstraintLayout>